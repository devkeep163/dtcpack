/** 全局样式 **/
.avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    vertical-align: middle;
}

.arrow-icon {
    width: 20rpx !important;
    height: 20rpx !important;
    border-top: 2px solid #c8c9cc;
    border-right: 2px solid #c8c9cc;
    transform: rotate(45deg);
    margin-right: 5rpx;
}


.login-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 60px;
    background-color: #f8f8f8;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 15px;
    box-shadow: 0 -2px 5px rgba(0, 0, 0, 0.1);
}

.login-bar text {
    font-size: 14px;
    color: #333;
}
.login-bar navigator {
    font-size: 14px;
    padding: 5px 15px;
    background-color: #815df2;
    color: white;
    border-radius: 4px;
}
.login-bar button {
    background-color: #815df2;
}

/* 分享模态框 */
.share-btn {
    background-color: #007AFF;
    color: #ffffff;
    border: none;
    border-radius: 20px;
    padding: 10px 20px;
}

.modal {
    position: fixed;
    bottom: -100%;
    left: 0;
    width: 100%;
    height: 100%;
    transition: all 0.3s ease-out;
    z-index: 9999;
}

.modal.show {
    bottom: 0;
}

.modal-mask {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
}

.modal-content {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    background: #ffffff;
    border-top-left-radius: 20px;
    border-top-right-radius: 20px;
    overflow: hidden;
}

.modal-header {
    padding: 20px;
    text-align: center;
    font-size: 18px;
    font-weight: bold;
    border-bottom: 1px solid #e0e0e0;
}

.modal-body {
    display: flex;
    justify-content: space-around;
    padding: 20px;
}

.share-option {
    display: flex;
    flex-direction: column;
    align-items: center;
    background: none;
    border: none;
    padding: 10px;
}

.share-option image {
    width: 50px;
    height: 50px;
    margin-bottom: 10px;
}

.share-option text {
    font-size: 14px;
    color: #333333;
}

.modal-footer {
    padding: 10px 20px 30px;
}