.container {
    height: 100vh;
    padding: 20rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    gap: 30rpx;

    background-color: #8c52ff;
    background: linear-gradient(180deg,
            #8c52ff 0%,
            #8c52ff 25%,
            #ccc 50%,
            #dedede 75%,
            #f4f5fc 100%);
}

.user-info {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.user-base {
    display: flex;
    align-items: center;
    gap: 20rpx
}

.avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    border: 2px #a891f5 solid;
}

.username {
    color: #fff;
    font-weight: bold;
}

.user-next-icon {
    width: 40rpx;
    height: 40rpx;
}






.stats-grid {
    display: flex;
    flex-wrap: wrap;
    background-color: #fff;
    padding: 20rpx 0;
    border-radius: 20rpx;
}

.stat-item {
    width: 33.33%;
    text-align: center;
    padding: 20rpx 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20rpx;
}

.stats-icon {
    width: 60rpx;
    height: 60rpx;
}

.stat-value {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
    line-height: 1.2;
}

.stat-label {
    font-size: 22rpx;
    color: #969799;
    margin-top: 8rpx;
    line-height: 1.2;
}

.menu-list {
    background-color: #fff;
    border-radius: 20rpx;
    width: 100%;
}

.menu-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 40rpx 20rpx;
    position: relative;
}

.menu-item::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 10px;
    right: 10px;
    height: 1px;
    background-color: #f2f2f2;
}

.menu-item:last-child {
    border-bottom: none;
}

.menu-item-left {
    display: flex;
    align-items: center;
    gap: 20rpx;
}

.menu-item-right {
    font-size: 30rpx;
    color: #ccc;
}

.menu-label {
    font-size: 30rpx;
    color: #333;
}

.menu-value {
    font-size: 28rpx;
    color: #969799;
}

.menu-icon {
    width: 40rpx;
    height: 40rpx;
}

.logout-btn {
    width: 100%;
    background-color: #fff;
    color: #000;
    border: none;
    border-radius: 20rpx;
    padding: 20rpx 0;
    font-size: 32rpx;
    text-align: center;
}

.user-arrow-icon {
    width: 10px;
    height: 10px;
    border-top: 2px solid #fff;
    border-right: 2px solid #fff;
    transform: rotate(45deg);
    margin-right: 20rpx;
}

.arrow-icon {
    width: 10px;
    height: 10px;
    border-top: 2px solid #c8c9cc;
    border-right: 2px solid #c8c9cc;
    transform: rotate(45deg);
}

/* 弹窗样式 */
.popup-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 999;
}

.popup-mask {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
}

.popup-content {
    position: relative;
    background-color: #fff;
    padding: 30rpx;
    border-radius: 10rpx;
    width: calc(100% - 60rpx);
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    gap: 50rpx;
}

.popup-title {
    font-size: 30rpx;
    margin-bottom: 20rpx;
    text-align: center;
}

input {
    border: 1rpx solid #ccc;
    padding: 0 20rpx;
    width: 100%;
    height: 60rpx !important;
    line-height: 60rpx !important;
    box-sizing: border-box;
    border-radius: 10rpx;
}

.button-group {
    display: flex;
    justify-content: space-between;
}

.cancel-btn,
.save-btn {
    width: 45%;
}

.save-btn {
    background-color: #8c52ff;
    color: white;
}