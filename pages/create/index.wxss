page {
    background-color: #f2f2ff;
}

.container {
    display: flex;
    flex-direction: column;
    padding: 30rpx;
    box-sizing: border-box;
    gap: 30rpx;
}

.item {
    border-radius: 20rpx;
    width: 100%;
    background-color: #fff;
    display: flex;
    padding: 30rpx 15rpx;
    justify-content: center;
    box-sizing: border-box;
}

.description {
    font-size: 34rpx;
    margin-bottom: 40rpx;
    line-height: 1.4;
}

.highlight {
    color: #8365FF;
}

.input-box,
.picker {
    display: flex;
    align-items: center;
    border: 1rpx solid #E0E0E0;
    border-radius: 10rpx;
    padding: 20rpx;
    margin-bottom: 20rpx;
}

.input-icon,
.picker-icon {
    width: 40rpx;
    height: 40rpx;
    margin-right: 20rpx;
}

input {
    flex: 1;
    font-size: 28rpx;
}

.input-placeholder {
    color: #BBBBBB;
}

.arrow-picker {
    width: 100%;
}

.picker-text {
    flex: 1;
    font-size: 28rpx;
    color: #333;
}

.arrow-icon {
    width: 40rpx;
    height: 40rpx;
}

.footer {
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    background-color: #8c52ff;
    color: #fff;
    border-radius: 20rpx;
    text-align: center;
}