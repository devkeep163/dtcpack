page {
    background-color: #f2f2ff;
}

.container {
    display: flex;
    flex-direction: column;
    padding: 30rpx;
    box-sizing: border-box;
    gap: 30rpx;
}

.header {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    background-color: #815df2;
    color: #fff;
    border-radius: 20rpx;
    text-align: center;
}

.item {
    border-radius: 20rpx;
    width: 100%;
    background-color: #fff;
    display: flex;
    flex-direction: column;
    padding: 30rpx 20rpx;
    justify-content: center;
    box-sizing: border-box;
}

.main-info {
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box;
}

.url-container {
    flex: 1;
    font-size: 26rpx;
}

.label {
    color: #888;
}

.url {
    color: #333;
}

.score-container {
    font-size: 24rpx;
    text-align: center;
}
.score-container image {
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    border: 2px #fff solid;
}


.good {
    background: #e6f3cf;
    color: #75b110;
}
.fair {
    background: #fff1de;
    color: #f09202;
}
.poor {
    background: #fff2f2;
    color: #ffb0ae;
}

.emoji {
    font-size: 40rpx;
    z-index: 9999;
}

.sub-info {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx 0;
    border-bottom: 1px #f2f2f2 solid;
    box-sizing: border-box;
}

.country-language {
    color: #666;
}
.country-language text {
    margin-right: 40rpx;
    font-size: 26rpx;
}

.create-date {
    color: #666;
}

.share-icon image {
    width: 40rpx;
    height: 40rpx;
}

.footer-info {
    display: flex;
    justify-content: space-between;
    font-size: 26rpx;
    margin-top: 50rpx;
}


/* 弹窗样式 */
.popup-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 999;
}

.popup-mask {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
}

.popup-content {
    position: relative;
    background-color: #fff;
    width: 80%;
    padding: 30rpx;
    border-radius: 10rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    gap: 30rpx;
}

.popup-title {
    font-size: 30rpx;
    margin-bottom: 20rpx;
    text-align: center;
}

.popup-item {
    display: flex;
    align-items: center;
    gap: 20rpx;
}

.popup-item text {
    width: 120rpx;
}

input {
    flex: 1;
    border: 2rpx solid #ccc;
    padding: 0 20rpx;
    width: 100%;
    height: 80rpx !important;
    line-height: 80rpx !important;
    box-sizing: border-box;
    border-radius: 10rpx;
}

.button-group {
    display: flex;
    gap: 20rpx;
    justify-content: space-between;
    padding: 30rpx 0;
}

.cancel-btn,
.save-btn {
    width: 45%;
}

.save-btn {
    background-color: #815df2;
    color: white;
}