page {
    background-color: #f2f2ff;
}

.nav-active {
    color: #815df2 !important;
}

.container {
    display: flex;
    flex-direction: column;
    padding: 30rpx;
    box-sizing: border-box;
    gap: 30rpx;
}

.nav-container {
    width: 100%;
    display: flex;
    justify-content: space-around;
    padding: 20rpx;
    box-sizing: border-box;
    background-color: #fff;
    border-radius: 20rpx;
}

.nav-card {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.icon {
    width: 50rpx;
    height: 50rpx;
}

.nav-text {
    font-size: 28rpx;
    color: #333333;
}

.item {
    border-radius: 20rpx;
    width: 100%;
    background-color: #fff;
    display: flex;
    flex-direction: column;
    padding: 30rpx 20rpx;
    justify-content: center;
    box-sizing: border-box;
}

.main-info {
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box;
}

.url-container {
    flex: 1;
    font-size: 26rpx;
}

.label {
    color: #888;
}

.url {
    color: #333;
}

.score-container {
    display: flex;
    align-items: center;
    background: #ccc;
    border-radius: 20rpx;
    width: 140rpx;
    height: 40rpx;
    gap: 20rpx;
    font-size: 24rpx;
}

.score-container image {
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    border: 2px #fff solid;
}


.good {
    background: #e6f3cf;
    color: #75b110;
}

.fair {
    background: #fff1de;
    color: #f09202;
}

.poor {
    background: #fff2f2;
    color: #ffb0ae;
}

.emoji {
    font-size: 40rpx;
    z-index: 9999;
}

.sub-info {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx 0;
    border-bottom: 1px #f2f2f2 solid;
    box-sizing: border-box;
}

.country-language {
    color: #666;
}

.country-language text {
    margin-right: 40rpx;
    font-size: 26rpx;
}

.create-date {
    color: #666;
}

.share-icon image {
    width: 40rpx;
    height: 40rpx;
}

.footer-info {
    display: flex;
    justify-content: space-between;
    font-size: 26rpx;
    margin-top: 50rpx;
}



/* 模态框 */
.share-btn {
    background-color: #007AFF;
    color: #ffffff;
    border: none;
    border-radius: 20px;
    padding: 10px 20px;
}

.modal {
    position: fixed;
    bottom: -100%;
    left: 0;
    width: 100%;
    height: 100%;
    transition: all 0.3s ease-out;
}

.modal.show {
    bottom: 0;
}

.modal-mask {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
}

.modal-content {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    background: #ffffff;
    border-top-left-radius: 20px;
    border-top-right-radius: 20px;
    overflow: hidden;
}

.modal-header {
    padding: 20px;
    text-align: center;
    font-size: 18px;
    font-weight: bold;
    border-bottom: 1px solid #e0e0e0;
}

.modal-body {
    display: flex;
    justify-content: space-around;
    padding: 20px;
}

.share-option {
    display: flex;
    flex-direction: column;
    align-items: center;
    background: none;
    border: none;
    padding: 10px;
}

.share-option image {
    width: 50px;
    height: 50px;
    margin-bottom: 10px;
}

.share-option text {
    font-size: 14px;
    color: #333333;
}

.modal-footer {
    padding: 10px 20px 30px;
}

.cancel-btn {
    background-color: #f2f2f2;
    color: #333333;
    border: none;
    border-radius: 20px;
    padding: 10px 0;
}


.bottom-container {
    position: fixed;
    left: 0;
    bottom: 10rpx;
    width: calc(100% - 60rpx);
    margin: 0 30rpx;
    height: 80rpx;
    line-height: 80rpx;
    background-color: #815df2;
    color: #fff;
    border-radius: 20rpx;
    text-align: center;
}