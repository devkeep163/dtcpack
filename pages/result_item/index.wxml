<view class="nav-container">
    <view class="nav-card {{currentIndex === index ? 'nav-active' : ''}}" wx:for="{{navs}}" wx:key="index" bindtap="scrollToView" data-index="{{index}}" data-target="section{{index}}">
        <text>{{item}}</text>
    </view>
</view>

