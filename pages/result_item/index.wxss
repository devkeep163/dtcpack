page {
    background-color: #f2f2ff;
}

.container {
    display: flex;
    flex-direction: column;
    padding: 150rpx 20rpx;
    box-sizing: border-box;
    gap: 30rpx;
}

.nav-container {
    position: fixed;
    width: 100%;
    height: 120rpx;
    display: flex;
    white-space: nowrap;
    display: inline-block;
    background-color: #fff;
    overflow-x: scroll;
}

.nav-container::-webkit-scrollbar {
    display: none;
}

.nav-card {
    position: relative;
    flex-shrink: 0;
    height: 110rpx;
    line-height: 120rpx;
    text-align: center;
    display: inline-block;
    padding: 0 20rpx;
}

.nav-active {
    color: #815DF2;
    position: relative;
    padding-bottom: 5px;
    background: linear-gradient(to right, #815DF2 0%, #815DF2 100%, transparent 100%);
    background-size: 50% 3px;
    background-position: bottom center;
    background-repeat: no-repeat;
}

.nav-card text {
    font-size: 28rpx;
}

.header-container {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    box-sizing: border-box;
    align-items: center;
    gap: 20rpx;
}

.header-item {
    background-color: #fff;
    text-align: center;
    border-radius: 10rpx;
    display: flex;
    flex-direction: column;
    gap: 10rpx;
    padding: 10rpx 0;
    font-size: 26rpx;
}

.header-number {
    margin-right: 10rpx;
    font-size: 32rpx;
    font-weight: bold;
}

.header-good {
    color: #75b110;
}

.header-fair {
    color: #f09202;
}

.header-poor {
    color: #ff1234;
}

.item {
    border-radius: 20rpx;
    width: 100%;
    background-color: #fff;
    display: flex;
    flex-direction: column;
    padding: 30rpx 20rpx;
    justify-content: center;
    box-sizing: border-box;
    gap: 20rpx;
}

.main-info {
    display: flex;
    align-items: center;
    box-sizing: border-box;
    gap: 20rpx;
}

.checkmark {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 36rpx;
    color: white;
}

.checkmark-green {
    background-color: #4CAF50;
}

.checkmark-green::after {
    content: "\2714";
}

.checkmark-red {
    background-color: #F44336;
}

.checkmark-red::after {
    content: "\2716";
}

.label-container {
    display: flex;
    flex-direction: column;
    font-size: 28rpx;
    gap: 10rpx;
}
.result {
    color: #999;
}

.main-content {
    border-top: 1px #f2f2f2 solid;
    border-bottom: 1px #f2f2f2 solid;
    padding: 20rpx 0;
}

.content {
    color: #666;
    line-height: 50rpx;
    font-size: 26rpx;
}

.footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20rpx 0;
}

.footer-title {
    color: #999;
    font-size: 26rpx;
}

