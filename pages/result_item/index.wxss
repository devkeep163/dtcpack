page {
    background-color: #f2f2ff;
    margin: 0;
    padding: 0;
}

.nav-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 120rpx;
    display: flex;
    white-space: nowrap;
    display: inline-block;
    background-color: #fff;
    overflow-x: scroll;
    z-index: 999;
}

.container {
    display: flex;
    flex-direction: column;
    padding: 20rpx;
    margin-top: 120rpx;
    overflow: hidden;
    height: calc(100vh - 120rpx);
    box-sizing: border-box;
    gap: 30rpx;
}

.nav-container::-webkit-scrollbar {
    display: none;
}

.nav-card {
    position: relative;
    flex-shrink: 0;
    height: 110rpx;
    line-height: 120rpx;
    text-align: center;
    display: inline-block;
    padding: 0 20rpx;
}

.nav-active {
    color: #815DF2;
    position: relative;
    padding-bottom: 5px;
    background: linear-gradient(to right, #815DF2 0%, #815DF2 100%, transparent 100%);
    background-size: 50% 3px;
    background-position: bottom center;
    background-repeat: no-repeat;
}

.nav-card text {
    font-size: 28rpx;
}

.header-container {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    box-sizing: border-box;
    align-items: center;
    gap: 20rpx;
    padding: 20rpx 0;
}

.header-item {
    background-color: #fff;
    text-align: center;
    border-radius: 10rpx;
    display: flex;
    flex-direction: column;
    gap: 10rpx;
    padding: 10rpx 0;
    font-size: 26rpx;
}

.header-number {
    margin-right: 10rpx;
    font-size: 32rpx;
    font-weight: bold;
}

.header-good {
    color: #75b110;
}

.header-fair {
    color: #f09202;
}

.header-poor {
    color: #ff1234;
}

.item {
    border-radius: 20rpx;
    width: 100%;
    background-color: #fff;
    display: flex;
    flex-direction: column;
    padding: 0 20rpx;
    justify-content: center;
    box-sizing: border-box;
    margin-bottom: 20rpx;
}

.main-info {
    display: flex;
    align-items: center;
    box-sizing: border-box;
    gap: 20rpx;
    border-bottom: 1px #f2f2f2 solid;
    padding: 20rpx 0;
}

.checkmark {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 36rpx;
    color: white;
}

.checkmark-green {
    background-color: #4CAF50;
}

.checkmark-green::after {
    content: "\2714";
}

.checkmark-red {
    background-color: #F44336;
}

.checkmark-red::after {
    content: "\2716";
}

.label-container {
    display: flex;
    flex-direction: column;
    font-size: 28rpx;
    gap: 10rpx;
    width: calc(100% - 100rpx);
}

.result {
    color: #666;
    font-size: 24rpx;
}

.error {
    color: #ff1234 !important;
}

/* 错误样式 */
.main-error {
    display: flex;
    flex-direction: column;
    padding: 20rpx 0;
    gap: 10rpx;
}
.error-body {
    display: flex;
    flex-direction: column;
    gap: 15rpx;
}
.error-result {
    padding: 15rpx;
    box-sizing: border-box;
    background: #F4F5FB;
    font-size: 26rpx;
}
.main-content {
    padding: 20rpx 0;
    border-bottom: 1px #f2f2f2 solid;
}

.error-box-content {
    display: flex;
    padding: 20rpx 0;
    flex-direction: column;
    color: #666;
    overflow-wrap: break-word;
}

.content {
    color: #666;
    line-height: 50rpx;
    font-size: 26rpx;
}

.footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20rpx 0;
}

.footer-title {
    color: #999;
    font-size: 26rpx;
}

.last-item {
    border-bottom: 1px #f2f2f2 solid !important;
}

.flex-table {
    display: flex;
    flex-direction: column;
    width: 100%;
    border: 1rpx solid #dee2e6;
    word-break: break-all;
    overflow: hidden;
    background-color: #F4F5FB;
}

.flex-table-crosswise {
    display: flex;
    width: 100%;
    border: 1rpx solid #dee2e6;
    word-break: break-all;
    overflow: hidden;
}

.flex-row {
    display: flex;
    width: 100%;
}

.flex-cell {
    flex: 1;
    padding: 10px;
    border: 1rpx solid #dee2e6;
    text-align: left;
    /* 文本对齐方式 */
    word-wrap: break-word;
    /* 超出单词自动换行 */
    white-space: normal;
    /* 允许正常换行 */
    word-break: break-all;
}



/* H标题 */
.h {
    display: flex;
    flex-direction: column;
    gap: 10rpx;
    padding: 10rpx 0;
    box-sizing: border-box;
}

.h-line {
    display: flex;
    gap: 20rpx;
}

.h-line text {
    flex: 1;
    padding: 5rpx;
    background: #F4F5FB;
    text-align: center;
    font-size: 24rpx;
}



/* 图片诊断特殊样式 */
.special {
    display: flex;
    flex-direction: column;
    gap: 10rpx;
}
.special-one {
    gap: 10rpx;
    display: flex;
    align-items: center;
}

.special-one text {
    font-size: 24rpx;
}