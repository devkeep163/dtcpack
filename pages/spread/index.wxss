page {
    background-color: #f2f2ff;
}

.container {
    display: flex;
    flex-direction: column;
    padding: 30rpx;
    box-sizing: border-box;
    gap: 30rpx;
}

.nav-container {
    width: 100%;
    border-radius: 20rpx;
    position: relative;
}

.nav-container image {
    width: 100%;
}

.nav-label {
    position: absolute;
    left: 180rpx;
    top: 50%;
    transform: translateY(-50%);
    color: #fff;
    font-size: 30rpx;
}

.nav-number {
    position: absolute;
    top: 50%;
    right: 40rpx;
    transform: translateY(-50%);
    color: #fff;
    font-size: 36rpx;
    font-weight: bold;
}

.item {
    border-radius: 20rpx;
    width: 100%;
    background-color: #fff;
    display: flex;
    flex-direction: column;
    padding: 0rpx 20rpx;
    justify-content: center;
    box-sizing: border-box;
}

.main-info {
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box;
    border-bottom: 1px #f2f2f2 solid;
    padding: 40rpx 15rpx;
}

.main-info-text {
    display: flex;
    flex-direction: column;
    gap: 20rpx;
}

.url-container {
    flex: 1;
    font-size: 26rpx;
    display: flex;
    gap: 20rpx;
}

.label {
    color: #888;
}

.footer-info {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 26rpx;
    padding: 20rpx 0;
}

.create-date {
    display: flex;
}

.create-date text{
    color: #999;
}

.create-date-title {
    width: 20%;
}

.create-date-text {
    width: 70%;
    line-height: 40rpx;
    overflow-wrap: break-word;
}



/* 弹窗样式 */
.popup-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 999;
}

.popup-mask {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
}

.popup-content {
    position: relative;
    background-color: #fff;
    padding: 30rpx;
    border-radius: 10rpx;
    width: calc(100% - 60rpx);
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    gap: 50rpx;
}

.menu-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 30rpx 10px;
    position: relative;
}
.menu-item::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 10px;
    right: 10px;
    height: 1px;
    background-color: #f2f2f2;
}
.menu-item:first-child {
    justify-content: left;
    gap: 30rpx;
}

.label-res {
    width: 300rpx;
    overflow-wrap: break-word;
}

.menu-right {
    display: flex;
    align-items: center;
    gap: 10rpx;
}

.logout-btn {
    width: 100%;
    background-color: #815df2;
    color: #fff;
    border: none;
    border-radius: 20rpx;
    padding: 20rpx 0;
    font-size: 32rpx;
    text-align: center;
}